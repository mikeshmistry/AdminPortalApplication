@*
    View for managing teachers the controller is ManageTeacherController
*@


@using AdminPortal.UI.Models.Models;

@model IEnumerable<TeacherModel>

@{
    ViewData["Title"] = "ManageStudents";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}



<h4>Manage Teacher</h4>
<br />


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                <button type="button"  onclick="location.href='@Url.Action("AddEditTeacher", "ManageTeacher")'" class="btn btn-primary">Add Teacher</button>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <button type="button" onclick="location.href='@Url.Action("AddEditTeacher", "ManageTeacher", new { id = item.TeacherId })'" class="btn btn-primary">Edit</button>
                        <button type="button" onclick="location.href='@Url.Action("DeleteTeacher", "ManageTeacher", new { id = item.TeacherId })'" class="btn btn-primary">Delete</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    No Data
                </td>
            </tr>
        }
    </tbody>

</table>