@*
    View for managing students the controller is ManageStudentController
*@


@using AdminPortal.UI.Models.Models;

@model IEnumerable<StudentModel>

@{
    ViewData["Title"] = "ManageStudents";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}



<h4>Manage Student</h4>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                <button type="button" onclick="location.href='@Url.Action("AddEditStudent", "ManageStudent")'" class="btn btn-primary">Add Student</button>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                      @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
               </td>
                <td>
                    <button type="button"  onclick="location.href='@Url.Action("AddEditStudent", "ManageStudent", new { id = item.StudentId })'" class="btn btn-primary">Edit</button>
                    <button type="button"  onclick="location.href='@Url.Action("DeleteStudent", "ManageStudent", new { id = item.StudentId })'"   class="btn btn-primary">Delete</button>
                 
                </td>
            </tr>
            }
        }
        else 
        {
         <tr>
             <td>
                 No Data
             </td>
         </tr>
        }
    </tbody>
    
</table>